  # Orchestrator mode
  orchestrator:
    preferred_model: "anthropic/claude-3-opus-20240229"
    context_size: 25000
    max_memory_items: 500
    allowed_tools:
      - all
    context_sharing_rules:
      share_between_agents:
        - task_results
        - intermediate_outputs
        - error_logs
        - coordination_data
    pre_processing_hooks:
      - validate_resources
      - check_dependencies
    post_processing_hooks:
      - consolidate_results
      - cleanup_temp
      - update_project_state
    cost_limits:
      per_session: 30.0
      per_agent: 8.0
    resource_limits:
