      example_provided: "ğŸ’¡ Practical nÃ¼munÉ™:"

  # Fast mode
  fast:
    context_size: 2000
    max_memory_items: 50
    auto_approve: true
    timeout_seconds: 30
    allowed_tools:
      - terminal
      - git
      - file_ops
      - quick_search
    display_settings:
      minimal_output: true
      show_only_results: true
    cost_limits:
      per_task: 0.5
    custom_prompts:
      welcome: "âš¡ Fast Mode - sÃ¼rÉ™tli É™mÉ™liyyatlar"
