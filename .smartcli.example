# Smart CLI Project Configuration Template
# Copy this file to .smartcli in your project root and customize as needed

project_name: "Smart CLI Enterprise Platform"
project_type: "development"
default_mode: "smart"

# Technology stack for intelligent mode suggestions
tech_stack:
  - python
  - typescript
  - react
  - fastapi
  - postgresql
  - docker

# Mode-specific configurations
modes:
  # Smart mode (auto-detection)
  smart:
    preferred_model: "anthropic/claude-3-sonnet-20240229"
    context_size: 4000
    display_settings:
      show_classification: true
      show_confidence: true
      suggest_switches: true

  # Code development mode
  code:
    preferred_model: "anthropic/claude-3-sonnet-20240229"
    fallback_models:
      - "anthropic/claude-3-haiku-20240307"
    context_size: 8000
    max_memory_items: 200
    allowed_tools:
      - file_edit
      - terminal
      - git
      - search
      - analysis
      - test
    confirmation_required:
      - file_delete
      - git_reset
    pre_processing_hooks:
      - check_git_status
      - validate_syntax
    post_processing_hooks:
      - run_tests
      - update_docs
    cost_limits:
      per_session: 15.0
      per_task: 3.0
    custom_prompts:
      welcome: "💻 Kod Development Mode - orchestrator ilə gücləndirilmiş"
      pre_task: "📋 Task analizi aparılır..."
      post_task: "✅ Implementation tamamlandı"

  # Analysis mode
  analysis:
    preferred_model: "anthropic/claude-3-sonnet-20240229"
    context_size: 15000
    allowed_tools:
      - file_read
      - search
      - analysis
      - security_scan
    restricted_tools:
      - file_edit
      - file_delete
      - terminal
    permissions:
      read: true
      write: false
      execute: false
    pre_processing_hooks:
      - backup_before_analysis
    cost_limits:
      per_session: 8.0
    custom_prompts:
      welcome: "🔍 Analysis Mode - dərin təhlil və review"
      analysis_start: "📊 Detailed analysis başlayır..."
      security_check: "🛡️ Security analysis daxil edildi"

  # Architecture mode
  architect:
    preferred_model: "anthropic/claude-3-opus-20240229"
    context_size: 20000
    max_memory_items: 300
    allowed_tools:
      - analysis
      - documentation
      - search
      - diagram
    permissions:
      read: true
      write: true
      execute: false
    context_sharing_rules:
      share_to_all:
        - system_design
        - architecture_decisions
        - tech_stack
        - design_patterns
    cost_limits:
      per_session: 20.0
    custom_prompts:
      welcome: "🏗️ Architecture Mode - sistem dizaynı focus"
      design_start: "🎨 System architecture analizi..."
      documentation: "📚 Architecture documentation yaradılır"

  # Learning mode
  learning:
    preferred_model: "anthropic/claude-3-sonnet-20240229"
    context_size: 8000
    allowed_tools:
      - search
      - documentation
      - tutorial
    restricted_tools:
      - file_edit
      - file_delete
      - terminal
    permissions:
      read: true
      write: false
      execute: false
    display_settings:
      show_examples: true
      interactive_mode: true
      progress_tracking: true
    cost_limits:
      per_session: 5.0
    custom_prompts:
      welcome: "📚 Learning Mode - təhsil məqsədli izahat"
      explanation_start: "🎓 Step-by-step izahat:"
      example_provided: "💡 Practical nümunə:"

  # Fast mode
  fast:
    context_size: 2000
    max_memory_items: 50
    auto_approve: true
    timeout_seconds: 30
    allowed_tools:
      - terminal
      - git
      - file_ops
      - quick_search
    display_settings:
      minimal_output: true
      show_only_results: true
    cost_limits:
      per_task: 0.5
    custom_prompts:
      welcome: "⚡ Fast Mode - sürətli əməliyyatlar"
      quick_task: "🚀 Express icra..."

  # Orchestrator mode
  orchestrator:
    preferred_model: "anthropic/claude-3-opus-20240229"
    context_size: 25000
    max_memory_items: 500
    allowed_tools:
      - all
    context_sharing_rules:
      share_between_agents:
        - task_results
        - intermediate_outputs
        - error_logs
        - coordination_data
    pre_processing_hooks:
      - validate_resources
      - check_dependencies
    post_processing_hooks:
      - consolidate_results
      - cleanup_temp
      - update_project_state
    cost_limits:
      per_session: 30.0
      per_agent: 8.0
    resource_limits:
      max_concurrent_agents: 5
      max_execution_time: 1800
    custom_prompts:
      welcome: "🎭 Orchestrator Mode - multi-agent koordinasiya"
      planning: "📋 Multi-agent plan hazırlanır..."
      coordination: "🤝 Agent koordinasiyası aktiv"
      completion: "🎯 Multi-agent task uğurla tamamlandı"

# Integration settings
integrations:
  github:
    enabled: true
    auto_commit: false
    branch_protection: true
    
  cost_tracking:
    enabled: true
    budget_limit: 100.0
    alert_threshold: 0.8
    daily_limit: 20.0
    
  ai_providers:
    primary: "anthropic"
    fallback: "openai"
    local_models: false
    
  security:
    enabled: true
    scan_before_commit: true
    sensitive_data_detection: true

# Team and collaboration settings
team_settings:
  shared_modes:
    - architect
    - learning
    
  approval_required:
    - orchestrator
    - analysis
    
  shared_context:
    enabled: true
    sync_interval: 300
    
  notifications:
    mode_switches: false
    task_completions: true
    errors: true

# Project-specific customizations
customizations:
  # Custom mode indicators
  mode_indicators:
    code: "💻"
    analysis: "🔬"
    architect: "🏛️"
    learning: "🎓"
    fast: "⚡"
    orchestrator: "🎭"
  
  # Project templates
  templates:
    component: "src/templates/component.tsx"
    api_endpoint: "src/templates/endpoint.py"
    test_file: "src/templates/test.py"
  
  # Shortcuts and aliases
  shortcuts:
    analyze: "/mode analysis"
    code: "/mode code" 
    design: "/mode architect"
    learn: "/mode learning"
    quick: "/mode fast"
    orchestrate: "/mode orchestrator"

# Environment-specific settings
environments:
  development:
    debug_mode: true
    verbose_logging: true
    cost_limits_relaxed: true
    
  production:
    debug_mode: false
    verbose_logging: false
    strict_validation: true
    
  testing:
    mock_ai_responses: true
    fast_mode_only: true
    cost_tracking_disabled: true