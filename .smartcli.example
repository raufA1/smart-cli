  # Architecture mode
  architect:
    preferred_model: "anthropic/claude-3-opus-20240229"
    context_size: 20000
    max_memory_items: 300
    allowed_tools:
      - analysis
      - documentation
      - search
      - diagram
    permissions:
      read: true
      write: true
      execute: false
    context_sharing_rules:
      share_to_all:
        - system_design
        - architecture_decisions
        - tech_stack
        - design_patterns
    cost_limits:
      per_session: 20.0
    custom_prompts:
      welcome: "ğŸ—ï¸ Architecture Mode - sistem dizaynÄ± focus"
      design_start: "ğŸ¨ System architecture analizi..."
      documentation: "ğŸ“š Architecture documentation yaradÄ±lÄ±r"

  # Learning mode
  learning:
    preferred_model: "anthropic/claude-3-sonnet-20240229"
    context_size: 8000
    allowed_tools:
      - search
      - documentation
      - tutorial
    restricted_tools:
      - file_edit
      - file_delete
      - terminal
    permissions:
      read: true
      write: false
      execute: false
    display_settings:
      show_examples: true
      interactive_mode: true
      progress_tracking: true
    cost_limits:
