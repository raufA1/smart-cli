# Integration settings
integrations:
  github:
    enabled: true
    auto_commit: false
    branch_protection: true
    
  cost_tracking:
    enabled: true
    budget_limit: 100.0
    alert_threshold: 0.8
    daily_limit: 20.0
    
  ai_providers:
    primary: "anthropic"
    fallback: "openai"
    local_models: false
    
  security:
    enabled: true
    scan_before_commit: true
    sensitive_data_detection: true

# Team and collaboration settings
team_settings:
  shared_modes:
    - architect
    - learning
    
  approval_required:
    - orchestrator
    - analysis
    
  shared_context:
    enabled: true
    sync_interval: 300
    
  notifications:
    mode_switches: false
    task_completions: true
    errors: true

# Project-specific customizations
customizations:
  # Custom mode indicators
  mode_indicators:
    code: "ğŸ’»"
    analysis: "ğŸ”¬"
    architect: "ğŸ›ï¸"
    learning: "ğŸ“"
    fast: "âš¡"
    orchestrator: "ğŸ­"
  
  # Project templates
  templates:
    component: "src/templates/component.tsx"
    api_endpoint: "src/templates/endpoint.py"
    test_file: "src/templates/test.py"
  
  # Shortcuts and aliases
  shortcuts:
    analyze: "/mode analysis"
    code: "/mode code" 
    design: "/mode architect"
    learn: "/mode learning"
    quick: "/mode fast"
    orchestrate: "/mode orchestrator"

# Environment-specific settings
environments:
  development:
    debug_mode: true
    verbose_logging: true
    cost_limits_relaxed: true
    
  production:
    debug_mode: false
    verbose_logging: false
    strict_validation: true
    
  testing:
    mock_ai_responses: true
    fast_mode_only: true
    cost_tracking_disabled: true