  # Analysis mode
  analysis:
    preferred_model: "anthropic/claude-3-sonnet-20240229"
    context_size: 15000
    allowed_tools:
      - file_read
      - search
      - analysis
      - security_scan
    restricted_tools:
      - file_edit
      - file_delete
      - terminal
    permissions:
      read: true
      write: false
      execute: false
    pre_processing_hooks:
      - backup_before_analysis
    cost_limits:
      per_session: 8.0
    custom_prompts:
      welcome: "ğŸ” Analysis Mode - dÉ™rin tÉ™hlil vÉ™ review"
      analysis_start: "ğŸ“Š Detailed analysis baÅŸlayÄ±r..."
